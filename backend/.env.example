# ==================== ENVIRONMENT ====================

ENVIRONMENT=development

DEBUG=True

API_VERSION=1.0.0

# ==================== SERVER ====================

HOST=0.0.0.0

PORT=8000

WORKERS=4

# ==================== DATABASE ====================

# PostgreSQL

POSTGRES_HOST=localhost

POSTGRES_PORT=5432

POSTGRES_DB=oasis_db

POSTGRES_USER=oasis_user

POSTGRES_PASSWORD=your_secure_password_here

# MongoDB

MONGO_URI=mongodb://localhost:27017

MONGO_DB=oasis_logs

# Redis

REDIS_HOST=localhost

REDIS_PORT=6379

REDIS_PASSWORD=

# ==================== AUTH & SECURITY ====================

SECRET_KEY=your_super_secret_key_here_change_in_production

ALGORITHM=HS256

ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==================== AZURE ====================

AZURE_STORAGE_CONNECTION_STRING=your_azure_storage_connection_string

AZURE_STORAGE_CONTAINER=oasis-models

AZURE_FUNCTION_KEY=your_azure_function_key

# Azure Cognitive Services

AZURE_COGNITIVE_ENDPOINT=https://your-service.cognitiveservices.azure.com/

AZURE_COGNITIVE_KEY=your_cognitive_services_key

# ==================== GOOGLE API ====================

GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

GOOGLE_CLIENT_SECRET=your_google_client_secret

GOOGLE_REDIRECT_URI=http://localhost:8000/api/auth/google/callback

# ==================== MICROSOFT GRAPH API ====================

MICROSOFT_CLIENT_ID=your_microsoft_client_id

MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

MICROSOFT_TENANT_ID=your_tenant_id

MICROSOFT_REDIRECT_URI=http://localhost:8000/api/auth/microsoft/callback

# ==================== SLACK API ====================

SLACK_CLIENT_ID=your_slack_client_id

SLACK_CLIENT_SECRET=your_slack_client_secret

SLACK_SIGNING_SECRET=your_slack_signing_secret

# ==================== HUGGING FACE ====================

HUGGINGFACE_API_KEY=your_huggingface_api_key

HUGGINGFACE_MODEL=gpt2

# ==================== ML MODEL ====================

MODEL_PATH=models/burnout_predictor.h5

SCALER_PATH=models/scaler.pkl

MODEL_VERSION=1.0.0

# ==================== MONITORING ====================

SENTRY_DSN=your_sentry_dsn_here

PROMETHEUS_PORT=9090

# ==================== CORS ====================

CORS_ORIGINS=http://localhost:3000,http://localhost:19006

# ==================== LOGGING ====================

LOG_LEVEL=INFO

LOG_FILE=logs/oasis.log

